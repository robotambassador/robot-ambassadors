<package>
  <description brief="Console logging library for roscpp">ROS console output library.</description>
  <license>BSD</license>
  <review status="Doc reviewed" notes="2010/01/12"/>
  <author>Josh Faust</author>
  <url>http://www.ros.org/wiki/rosconsole</url>
  <depend package="rostime"/>
  <export>
    <cpp cflags="-I${prefix}/include `rosboost-cfg --cflags`" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lrosconsole `rosboost-cfg --lflags thread,regex` `${prefix}/scripts/roslog4cxx-cfg.py --libs`"/>
  </export>
  <rosdep name="apr"/>
  <rosdep name="log4cxx"/>
  <platform os="ubuntu" version="9.04"/>
  <platform os="ubuntu" version="9.10"/>
  <platform os="ubuntu" version="10.04"/>
  <platform os="macports" version="macports"/>
</package>
